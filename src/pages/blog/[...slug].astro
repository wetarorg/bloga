---
import Layout from '../../layouts/Layout.astro';
import { getBlogPostBySlug } from '../../lib/turso';

const { slug } = Astro.params;
const post = await getBlogPostBySlug(slug);

if (!post) {
  return Astro.redirect('/404');
}
---

<Layout title={post.title}>
  <article>
    <img src={post.thumbnail_url} alt={post.title} class="thumbnail" />
    <h1>{post.title}</h1>
    <p>{new Date(post.created_at).toLocaleDateString()}</p>
    <div set:html={post.content} />
  </article>
</Layout>

<style>
  article {
    max-width: 800px;
    margin: 0 auto;
  }
  .thumbnail {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 1rem;
  }
</style>